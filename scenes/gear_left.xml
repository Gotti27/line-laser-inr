<scene version='3.0.0'>
    <default name="spp" value="256"/>
    <default name="res" value="256"/>

    <!--
    <integrator type='direct'/>
    -->
    <integrator type="aov">
        <string name="aovs" value="dd.y:depth"/> <!-- dd.y:depth,nn:position -->
        <integrator type="direct" name="my_image"/>
    </integrator>

    <sensor type="perspective" id="sensor">
        <float name="fov" value="60"/>
        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <rfilter type="box"/>
            <integer name="width" value="$res"/>
            <integer name="height" value="$res"/>
        </film>
        <transform name="to_world">
            <translate z="-7"/>
            <translate y="0"/>
            <rotate x="1" angle="0"/>
            <rotate y="1" angle="$angle"/>
            <!--
            -->
        </transform>

    </sensor>

    <shape type="ply" id="target-object">
        <string name="filename" value="meshes/$target"/>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="1 1 1"/>
        </bsdf>
        <transform name="to_world">
            <rotate x="1" angle="-90"/>
            <!--<scale value="0.8"/>-->
        </transform>
    </shape>

    <!--
    <shape type="obj" id="floor">
        <string name="filename" value="meshes/cbox_floor.obj"/>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="1 1 1"/>
        </bsdf>
        <transform name="to_world">
            <translate y="1.0"/>
            <scale value="100"/>
        </transform>
    </shape>
    -->

    <emitter type="point" id="light1">
        <!-- <point name="position" x="3" y="0" z="-10"/> -->
        <rgb name="intensity" value="30.0"/>
        <transform name="to_world">
            <translate z="-10"/>
            <translate x="3"/>
            <rotate y="1" angle="$angle"/>
        </transform>
    </emitter>

    <emitter type="point" id="light2">
        <!-- <point name="position" x="-3" y="0.0" z="-10"/> -->
        <rgb name="intensity" value="30.0"/>
        <transform name="to_world">
            <translate z="-10"/>
            <translate x="-3"/>
            <rotate y="1" angle="$angle"/>
        </transform>
    </emitter>

    <emitter type="spot">
        <!--
        <transform name="to_world">
            <lookat origin="-5, 3, -10" target="0, 0, 0" up="0, 1, 0"/>
            <rotate y="1" angle="$angle"/>
        </transform>
        -->
        <transform name="to_world">
            <translate z="-7"/>
            <translate y="0"/>
            <rotate x="1" angle="0"/>
            <rotate y="1" angle="-$laser_angle_delta"/>
            <rotate y="1" angle="$angle"/>


            <!--
            <lookat origin="0, 0, -7" target="0, 0, 0" up="0, 1, 0"/>
            -->
        </transform>

        <rgb name="intensity" value="1000, 0, 0"/>
        <float name="cutoff_angle" value="60"/>
        <float name="beam_width" value="60"/>
        <texture name="texture" type="bitmap">
            <string name="filename" value="data/laser.bmp"/>
            <!--
                <string name="wrap_mode" value="mirror"/>
            -->
        </texture>

    </emitter>

</scene>
